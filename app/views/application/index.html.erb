<h1> Movie Search</h1>

<div>
  <%= form_tag "/movies" do %>
  <p>Choose search by:
    <select name="user_selection">
      <option value="title">Movie Title</option>
      <option value="actors">Name</option>
    </select>
    <%= text_field_tag('search') %>
    <%= submit_tag("search") %>
    <% end %>
  </p>
</div>
